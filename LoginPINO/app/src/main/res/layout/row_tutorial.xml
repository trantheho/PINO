<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="10"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="6dp"
    android:id="@+id/row_tutorial"
    android:background="@drawable/bg_rounded_outline_gray"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="vertical">
        <com.ivankocijan.magicviews.views.MagicTextView
            android:id="@+id/tv_title_tutorial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginLeft="16dp"
            android:textColor="#1C2D51"
            android:textSize="18sp"
            app:typeFace="HelveticaNeue_Regular.otf" />
        <com.ivankocijan.magicviews.views.MagicTextView
            android:id="@+id/tv_sub_tutorial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="16dp"
            android:text=""
            android:textColor="#223254"
            android:textSize="14sp"
            app:typeFace="HelveticaNeue_Light.otf" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_weight="8">
        <ImageView
            android:id="@+id/iv_tutorial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
</LinearLayout>