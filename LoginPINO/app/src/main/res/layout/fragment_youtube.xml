<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".tutorial.video.YoutubeViewActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:orientation="horizontal"
        android:layout_alignParentTop="true">
        <ImageView
            android:id="@+id/iv_Back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="16dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_back"
            android:layout_alignParentLeft="true" />
        <com.ivankocijan.magicviews.views.MagicTextView
            android:id="@+id/tv_Title_ActionBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Video hướng dẫn"
            android:layout_centerInParent="true"
            android:textColor="#1C2D51"
            android:textSize="18sp"
            app:typeFace="HelveticaNeue_Medium.otf" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">
        <FrameLayout
            android:id="@+id/framelayout_video_recipe_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FEFEFE" />
    </LinearLayout>
</LinearLayout>
